[flake8]
filename = *.py,*.pyx,*.pxd
max-line-length = 100
ignore =
    E125,E121,E266,
    # print is allowed
    T001, T003,
    # invalid escape sequence
    W605
exclude =
    .git
    # __pycache__
    __pycache__
    # virtual environment
    .venv/
    venv/
    env/
    build/
    # sphinx docs
    docs/
max_complexity = 10
statistics = true
